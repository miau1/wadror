<p id="notice"><%= notice %></p>

<h1>
  <%= @style.name %>
</h1>

<p>
  <%= @style.text %>
</p>

<% if @style.beers.any? %>
  <p>
    <strong> Beers: </strong>
    <ul>
      <% @style.beers.each do |beer| %>
          <li><%= link_to beer.name, beers_path(beer.id) %> by <%= link_to beer.brewery.name, breweries_path(beer.brewery.id) %></li>
      <% end %>
    </ul>
  </p>
<% end %>

<% if current_user %>
  <%= link_to 'Edit', edit_style_path(@style) %> |
  <%= link_to 'Destroy', @style, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>